{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@listic/core-search": ["libs/core/search/src/index.ts"],
      "@listic/core/auth": ["libs/core/auth/src/index.ts"],
      "@listic/core/categories": ["libs/core/categories/src/index.ts"],
      "@listic/core/firebase": ["libs/core/firebase/src/index.ts"],
      "@listic/core/firebase/admin": ["libs/core/firebase/admin/src/index.ts"],
      "@listic/core/offer": ["libs/core/offer/src/index.ts"],
      "@listic/core/schema": ["libs/core/schema/src/index.ts"],
      "@listic/core/user": ["libs/core/user/src/index.ts"],
      "@listic/feature/auth": ["libs/feature/auth/src/index.ts"],
      "@listic/feature/footer": ["libs/feature/footer/src/index.ts"],
      "@listic/feature/layout": ["libs/feature/layout/src/index.ts"],
      "@listic/feature/navbar": ["libs/feature/navbar/src/index.ts"],
      "@listic/feature/offer/create": [
        "libs/feature/offer/create/src/index.ts"
      ],
      "@listic/feature/offer/list": ["libs/feature/offer/list/src/index.ts"],
      "@listic/feature/route": ["libs/feature/route/src/index.ts"],
      "@listic/feature/search": ["libs/feature/search/src/index.ts"],
      "@listic/ui/button": ["libs/ui/button/src/index.ts"],
      "@listic/ui/card": ["libs/ui/card/src/index.ts"],
      "@listic/ui/container": ["libs/ui/container/src/index.ts"],
      "@listic/ui/form": ["libs/ui/form/src/index.ts"],
      "@listic/ui/icons/*": ["libs/ui/icons/src/*"],
      "@listic/ui/id": ["libs/ui/id/src/index.ts"],
      "@listic/ui/input": ["libs/ui/input/src/index.ts"],
      "@listic/ui/logo": ["libs/ui/logo/src/index.ts"],
      "@listic/ui/off-canvas": ["libs/ui/off-canvas/src/index.ts"],
      "@listic/ui/spinner": ["libs/ui/spinner/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
