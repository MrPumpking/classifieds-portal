{
  "database": {
    "rules": "apps/listic-firebase/database.rules.json"
  },
  "firestore": {
    "rules": "apps/listic-firebase/firestore.rules",
    "indexes": "apps/listic-firebase/firestore.indexes.json"
  },
  "hosting": {
    "public": "apps/listic-firebase/public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "apps/listic-firebase/storage.rules"
  },
  "functions": {
    "predeploy": [
      "npx nx build listic-firebase --with-deps",
      "npx nx lint listic-firebase"
    ],
    "source": "dist/apps/listic-firebase"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "auth": {
      "port": "9099"
    },
    "pubsub": {
      "port": "8085"
    }
  }
}
